{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "globals": {
    "browser": true,
    "Promise": true,
    "require": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "root": false,
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "../webextension-toolbox.config.js"
      }
    },
    "react": {
      "version": "detect"
    }
  }
}