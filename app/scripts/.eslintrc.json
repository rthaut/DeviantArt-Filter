{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "globals": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:no-unsanitized/DOM"
    ],
    "parser": "babel-eslint",
    "rules": {
        "curly": ["error", "multi-line"],
        "no-console": "off",
        "no-unused-vars": ["error", {
            "vars": "local",
            "args": "none"
        }],
        "no-useless-escape": "off",
        "prefer-const": ["error"],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "quote-props": ["error", "always"]
    }
}